{
  "name": "ferny",
  "productName": "Ferny",
  "companyName": "Module Art",
  "description": "Your web browser",
  "version": "2.0.0",
  "license": "UNLICENSED",
  "author": {
    "name": "ModuleArt",
    "email": "module.art.team@gmail.com"
  },
  "main": "main.js",
  "homepage": "https://moduleart.github.io/ferny",
  "repository": {
    "url": "https://github.com/ModuleArt/ferny"
  },
  "scripts": {
    "start": "electron .",
    "dist": "build"
  },
  "dependencies": {
    "color.js": "^0.1.3",
    "dragula": "^3.7.2",
    "electron-log": "^2.2.17",
    "electron-tabs": "^0.9.5",
    "electron-updater": "^4.0.6",
    "get-ssl-certificate": "^2.3.2",
    "get-title-at-url": "^1.1.6",
    "google-autocomplete": "0.0.1",
    "persist-path": "^1.0.2",
    "prepend-file": "^1.3.1",
    "readl-async": "0.0.4",
    "validate.io-uri": "^1.0.0"
  },
  "devDependencies": {
    "electron-builder": "^20.40.2",
    "electron": "^6.0.0-beta.10"
  },
  "build": {
    "appId": "com.moduleart.ferny",
    "copyright": "Copyright Â© 2019 Module Art",
    "fileAssociations": [
      {
        "ext": "htm",
        "name": "HTM document",
        "role": "Viewer"
      },
      {
        "ext": "html",
        "name": "HTML document",
        "role": "Viewer"
      }
    ],
    "nsis": {
      "oneClick": false
    },
    "win": {
      "publish": {
        "provider": "github",
        "repo": "ferny",
        "owner": "ModuleArt",
        "host": "github.com",
        "protocol": "https",
        "releaseType": "release"
      },
      "target": "nsis",
      "icon": "imgs/icon.ico"
    },
    "linux": {
      "category": "Network",
      "target": "AppImage"
    }
  }
}
